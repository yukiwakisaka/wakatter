<% provide(:page_title, "新垢") %>
<h1>新垢</h1>

<div class="row">
  <div class="span4 offset4">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <div class = "actions" style="padding-top: 10px; float:right; margin-left: 185px;">
        <%= f.submit "垢・づ・く・り、しましょ！", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
