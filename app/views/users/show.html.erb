<% provide(:page_title, @user.name) %>
<div class="row">
	<aside class = "span4">
		<section>
			<h1>	
			<%= gravatar_for @user %>
			<%= @user.name %>
			</h1>
		</section>
		<section>
			<%= render 'shared/stats' %>
		</section>
	</aside>
	<div class = "span8">
		<%= render 'follow_form' if signed_in? %>
		<% if @user.microposts.any? %>
			<h3>Microposts (<%= @user.microposts.count %>)</h3>
			<ol class = "microposts">
				<%= render @microposts %>
			</ol>
			<%=  will_paginate @microposts %>
		<% else %>
		<!-- 自作部 -->
			<h3>早よ投稿せい</h3>
		<% end %>
	</div>
</div>