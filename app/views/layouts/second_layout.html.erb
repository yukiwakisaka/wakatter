<!DOCTYPE html>
<html>
	<%= render partial: 'layouts/head', locals: {title: yield(:page_title)} %>
	<body class = "initial", <% if (yield(:screen).presence||false) %>style = "background-blend-mode: screen;"<% end %>>
		<%= render 'layouts/header' %>
		<div style = "width:450px;", class = "container">
			<% flash.each do |key, value| %>
				<%= content_tag(:div, value, class: "alert alert-#{key}") %>
      		<% end %>
			<%= yield %>
		</div>		
		<%= render 'layouts/footer' %>
	</body>
</html>
