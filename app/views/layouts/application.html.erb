<!DOCTYPE html>
<html>
	<%= render partial: 'layouts/head', locals: {title: yield(:page_title)} %>
	<body>
		<%= render 'layouts/header' %>
		<div class = "container">
			<% flash.each do |key, value| %>
				<%= content_tag(:div, value, class: "alert alert-#{key}") %>
      		<% end %>
			<%= yield %>
		</div>		
		<%= render 'layouts/footer' %>
	</body>
</html>
