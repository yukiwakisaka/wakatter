<% if signed_in? %>
	<div class = "row">
		<aside class = "span4">
			<section>
				<%= render 'shared/user_info' %>
			</section>
			<section>
				<%= render 'shared/stats' %>
			</section>
			<section>
				<%= render 'shared/micropost_form' %>
			</section>
		</aside>
		<div class = "span8">
			<h3>Micropost Feed</h3>
			<%= render 'shared/feed' %>
		</div>
	</div>

<% else %>

	<div class = "center hero-unit">

	<h1>Home</h1>
	<p>Find me in app/views/static_pages/home.html.erb</p>

	<%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primaty" %>

	</div>


	<%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/' %>

<% end %>