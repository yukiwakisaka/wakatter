<% @user ||= current_user %>
<div class="stats">
  <a href="<%= following_user_path(@user) %>" class="waka-count">
    <strong id="following" class="stat">
      <%= @user.followed_users.count %>
    </strong>
    ほろー
  </a>
  
  <a href="<%= followers_user_path(@user) %>" class="waka-count">
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    ほろわー
  </a>

  <div class="waka-count">
  <strong style="height:20px;">
    <%= wakaru_count(@user) %>
  </strong>
    わかられる
  </div>

  <div class="waka-count">
  <strong style="height:20px;">
    <%= wakaran_count(@user) %>
  </strong>
    わかられず
  </div>

</div>