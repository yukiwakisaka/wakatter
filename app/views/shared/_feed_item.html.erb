 <% @item = feed_item %>
 <% size = Math.log(Math.sqrt(feed_item.user.microposts.count))*10 %>
<li id="<%= feed_item.id %>">
  <div class="container">

    <%= link_to gravatar_for(feed_item.user, size: size), feed_item.user %>
    <span class="user">
      <%= link_to feed_item.user.name, feed_item.user %>
    </span>
    <span class="content"><%= wrap(feed_item.content) %></span>
    <span class="timestamp">
      Posted <%= time_ago_in_words(feed_item.created_at) %> ago. 
    </span>

    わかられ数（<%= feed_item.wakaru_users.count %>）

    <%= render partial: 'shared/wakaru_form'  %>
    <% if current_user?(feed_item.user) %>
    <%= link_to "delete", feed_item, method: :delete,
                    data: {confirm: "You sure?"},
                    title: feed_item.content %>
    <% end %>


  </div>
</li>